extends base.pug

block content 
    video(src="/" + video.fileUrl,controls)
    div 
        p=video.description
        small=video.createdAt  
    div 
        small Uploaded by #{owner.name}
    if String(video.owner) === String(loggedInUser._id) 
        a(href=`${video.id}/edit`) 수정 🛠
        br
        a(href=`${video.id}/delete`) 삭제 ❌